<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="application.GameController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="display" id="test">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextArea>
            <HBox>
               <children>
                  <HBox prefHeight="78.0" prefWidth="318.0" spacing="15.0">
                     <children>
                        <Button fx:id="BTNSTART" mnemonicParsing="false" onAction="#onStart" onKeyPressed="#onpressStart" text="Start">
                           <HBox.margin>
                              <Insets top="25.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnSelect" mnemonicParsing="false" onAction="#onselect" onKeyPressed="#onpressselect" text="Select">
                           <HBox.margin>
                              <Insets top="25.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <VBox>
                     <children>
                        <HBox>
                           <children>
                              <Button fx:id="btnUP" mnemonicParsing="false" onAction="#onclick" onKeyPressed="#onpress" text="Sopra">
                                 <HBox.margin>
                                    <Insets left="70.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                        <HBox spacing="78.0">
                           <children>
                              <Button fx:id="btnLeft" mnemonicParsing="false" onAction="#onclick" onKeyPressed="#onpress" text="Sinistra" />
                              <Button fx:id="btnRigth" mnemonicParsing="false" onAction="#onclick" onKeyPressed="#onpress" text="Destra" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Button fx:id="btnbot" mnemonicParsing="false" onAction="#onclick" onKeyPressed="#onpress" text="Sotto">
                                 <HBox.margin>
                                    <Insets left="70.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
